<Page x:Class="WpfWODCoach.AthleteMain"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfWODCoach"
      mc:Ignorable="d" 
      d:DesignHeight="410" d:DesignWidth="800"
      Title="AthleteMain">

    <Grid>
        <DockPanel>
            <StackPanel Width="250" Orientation="Vertical" Background="AliceBlue">
                <Label Content="Athletes" HorizontalAlignment="Center" VerticalAlignment="Center" Height="70" FontSize="40" FontWeight="Bold" Margin="10,10"/>
                <ComboBox x:Name="cbCoachName" Text="Coach" Height="25" Width="200" Margin="10,10" VerticalAlignment="Top" 
                  ItemsSource="{Binding Path=SelectedItem}" DisplayMemberPath="fullName" SelectionChanged="cbCoachName_SelectionChanged"/>
                
            </StackPanel>
            <StackPanel Width="550">
                <DataGrid x:Name="dgCoachGrid" Height="410" Margin="2" VerticalAlignment="Top" Background="Gray"/>
            </StackPanel>
            
        </DockPanel>
        
        

    </Grid>
</Page>
